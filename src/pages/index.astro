---
// src/pages/index.astro
import Layout from '../components/Layout.astro';
import DinosaurFilter from '../components/DinosaurFilter.astro';

const pageTitle = 'Dino Explorer for Toddlers!';
---

<Layout title={pageTitle}>
  <main>
    <h1>{pageTitle}</h1>

    <section class='intro'>
      <h2>Welcome, Little Explorers!</h2>
      <p>Get ready for a roaring adventure through the world of dinosaurs!</p>
      <img
        src='/images/friendly-dino.png'
        alt='Friendly Cartoon Dinosaur'
        class='welcome-dino'
      />
    </section>

    <section class='dino-finder'>
      <h2>Find Your Favorite Dinos!</h2>
      <DinosaurFilter />
    </section>

    <section class='fun-facts'>
      <h2>Did You Know?</h2>
      <ul>
        <li>Some dinosaurs were as small as chickens!</li>
        <li>Others were as heavy as 12 elephants!</li>
        <li>Dinosaurs lived on Earth for more than 160 million years!</li>
      </ul>
    </section>
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    font-family: 'Comic Sans MS', cursive, sans-serif;
  }

  h1 {
    color: #ff6b6b;
    font-size: 3em;
    text-align: center;
    margin-bottom: 20px;
  }

  h2 {
    color: #4ecdc4;
    font-size: 2em;
    margin-top: 30px;
  }

  .intro,
  .dino-finder,
  .fun-facts {
    background-color: #f7f7f7;
    border-radius: 15px;
    padding: 20px;
    margin-bottom: 30px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .welcome-dino {
    display: block;
    max-width: 200px;
    margin: 20px auto;
  }

  .fun-facts ul {
    list-style-type: none;
    padding: 0;
  }

  .fun-facts li {
    background-color: #feca57;
    color: #333;
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 10px;
    font-size: 1.1em;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5em;
    }

    h2 {
      font-size: 1.8em;
    }
  }
</style>
