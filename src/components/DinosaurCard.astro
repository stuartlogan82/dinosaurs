---
// src/components/DinosaurCard.astro
const {
  name,
  scientificName,
  period,
  diet,
  habitat,
  length,
  weight,
  description,
  funFact,
  imageUrl,
  soundUrl,
} = Astro.props.dino;
console.log(Astro.props);
---

<div class='dinosaur-card'>
  <img src={imageUrl} alt={name} class='dinosaur-image' />
  <h2>{name}</h2>
  <p><em>{scientificName}</em></p>
  <ul>
    <li><strong>Period:</strong> {period}</li>
    <li><strong>Diet:</strong> {diet}</li>
    <li><strong>Habitat:</strong> {habitat}</li>
    <li><strong>Length:</strong> {length} meters</li>
    <li><strong>Weight:</strong> {weight} tons</li>
  </ul>
  <p>{description}</p>
  <div class='fun-fact'>
    <h3>Fun Fact:</h3>
    <p>{funFact}</p>
  </div>
  <button class='roar-button'>Hear me roar!</button>
  <audio id={`${name}-sound`} src={soundUrl}></audio>
</div>

<style>
  .dinosaur-card {
    border: 2px solid #ccc;
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 20px;
    background-color: #f9f9f9;
    transition: transform 0.3s ease;
  }
  .dinosaur-card:hover {
    transform: scale(1.05);
  }
  .dinosaur-image {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
  }
  .fun-fact {
    background-color: #e6f7ff;
    padding: 10px;
    border-radius: 5px;
    margin-top: 10px;
  }
  .roar-button {
    background-color: #4caf50;
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 5px;
  }
</style>

<script>
  document.querySelectorAll('.roar-button').forEach((button) => {
    button.addEventListener('click', () => {
      const card = button.closest('.dinosaur-card');
      const audio = card.querySelector('audio');
      audio.play();
      card.style.animation = 'shake 0.5s';
      card.style.animationIterationCount = '1';
    });
  });
</script>

<style is:global>
  @keyframes shake {
    0% {
      transform: translate(1px, 1px) rotate(0deg);
    }
    10% {
      transform: translate(-1px, -2px) rotate(-1deg);
    }
    20% {
      transform: translate(-3px, 0px) rotate(1deg);
    }
    30% {
      transform: translate(3px, 2px) rotate(0deg);
    }
    40% {
      transform: translate(1px, -1px) rotate(1deg);
    }
    50% {
      transform: translate(-1px, 2px) rotate(-1deg);
    }
    60% {
      transform: translate(-3px, 1px) rotate(0deg);
    }
    70% {
      transform: translate(3px, 1px) rotate(-1deg);
    }
    80% {
      transform: translate(-1px, -1px) rotate(1deg);
    }
    90% {
      transform: translate(1px, 2px) rotate(0deg);
    }
    100% {
      transform: translate(1px, -2px) rotate(-1deg);
    }
  }
</style>
