---
// src/components/DinosaurCard.astro
const {
  name,
  scientificName,
  period,
  diet,
  habitat,
  length,
  weight,
  description,
  funFact,
  imageUrl,
  youtubeLink,
} = Astro.props.dino;

function getYoutubeId(url) {
  if (!url) return null;
  const regExp =
    /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|\&v=)([^#\&\?]*).*/;
  const match = url.match(regExp);
  return match && match[2].length === 11 ? match[2] : null;
}
---

<div class='dinosaur-card'>
  <img src={imageUrl} alt={name} class='dinosaur-image' />
  <h2>{name}</h2>
  <p><em>{scientificName}</em></p>
  <ul>
    <li><strong>Period:</strong> {period}</li>
    <li><strong>Diet:</strong> {diet}</li>
    <li><strong>Habitat:</strong> {habitat}</li>
    <li><strong>Length:</strong> {length} meters</li>
    <li><strong>Weight:</strong> {weight} tons</li>
  </ul>
  <p class='description'>{description}</p>
  <div class='fun-fact'>
    <h3>Fun Fact:</h3>
    <p>{funFact}</p>
  </div>
  {
    youtubeLink && (
      <button class='roar-button' aria-label='Play dinosaur sound'>
        Hear me roar!
      </button>
    )
  }
  <div class='video-container' style='display: none;'>
    <div id={`youtube-player-${getYoutubeId(youtubeLink)}`}></div>
    <button class='close-button' aria-label='Close video'>Close</button>
  </div>
</div>

<style>
  .dinosaur-card {
    border: 2px solid #ccc;
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 20px;
    background-color: #f9f9f9;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }
  .dinosaur-image {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
  }
  .description {
    flex-grow: 1;
    overflow-y: auto;
    max-height: 100px;
  }
  .fun-fact {
    background-color: #e6f7ff;
    padding: 10px;
    border-radius: 5px;
    margin-top: 10px;
  }
  .roar-button,
  .close-button {
    background-color: #4caf50;
    border: none;
    color: white;
    padding: 10px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 14px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 5px;
  }
  .close-button {
    background-color: #f44336;
  }
  .video-container {
    margin-top: 20px;
    width: 100%;
    padding-top: 56.25%; /* 16:9 Aspect Ratio */
    position: relative;
  }
  .video-container div {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
  }
</style>

<script define:vars={{ youtubeLink, name }}>
  // Load the YouTube API script
  var tag = document.createElement('script');
  tag.src = 'https://www.youtube.com/iframe_api';
  var firstScriptTag = document.getElementsByTagName('script')[0];
  firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

  // This function will be called when the YouTube API is ready
  window.onYouTubeIframeAPIReady = function () {
    document.querySelectorAll('.roar-button').forEach((button) => {
      const card = button.closest('.dinosaur-card');
      const videoContainer = card.querySelector('.video-container');
      const youtubeId = videoContainer.querySelector('div').id.split('-').pop();

      let player;

      button.addEventListener('click', () => {
        videoContainer.style.display = 'block';
        button.style.display = 'none';

        // Create the player if it doesn't exist
        if (!player) {
          player = new YT.Player(`youtube-player-${youtubeId}`, {
            height: '100%',
            width: '100%',
            videoId: youtubeId,
            playerVars: {
              autoplay: 1,
              controls: 1,
              rel: 0,
              fs: 1,
            },
            events: {
              onReady: onPlayerReady,
            },
          });
        } else {
          // If the player already exists, just play the video
          player.playVideo();
        }
      });

      function onPlayerReady(event) {
        event.target.playVideo();
      }

      card.querySelector('.close-button').addEventListener('click', () => {
        videoContainer.style.display = 'none';
        button.style.display = 'inline-block';

        // Stop the YouTube video
        if (player && typeof player.stopVideo === 'function') {
          player.stopVideo();
        }
      });
    });
  };
</script>
